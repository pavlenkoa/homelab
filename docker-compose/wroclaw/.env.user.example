# User Configuration for Wroc≈Çaw Environment
# Copy to .env.user and customize

# Domain configuration
DOMAIN_NAME=example.com

# Cloudflare API token for ACME DNS challenge
CF_API_TOKEN=your_cloudflare_token_here

# Basic auth credentials for protected services
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=your_basic_auth_password

# Authelia log level
AUTHELIA_LOG_LEVEL=info

# Timezone
TIMEZONE=Europe/Warsaw

# Data directory for file sharing
DATA_DIR=/path/to/shared/data

# Immich Configuration  
IMMICH_VERSION=release

# Admin user configuration for bootstrap
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Administrator

# Immich OIDC Configuration (SSO with Authelia)
OIDC_ISSUER_URL=https://auth.example.com
OIDC_CLIENT_ID=immich
OIDC_SCOPE=openid profile email
OIDC_BUTTON_TEXT=Login with Authelia
OIDC_AUTO_REGISTER=true

# Monitoring Configuration
LOCATION=wroclaw
INSTANCE_NAME=wroclaw-main

# MikroTik Router Configuration
WROCLAW_ROUTER1_NAME=wroclaw-main
WROCLAW_ROUTER1_IP=192.168.88.1
WROCLAW_ROUTER1_PASSWORD=your_mikrotik_prometheus_password